<Window x:Class="WpfPresentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPresentation"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Menu x:Name="menu" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="515">
        <MenuItem Header="Vehiculos">
            <MenuItem Header="Nuevo" HorizontalAlignment="Left" Width="140"/>
            <MenuItem Header="Listado" HorizontalAlignment="Left" Width="140" Click="MenuItem_Click_1"/>
        </MenuItem>
        <MenuItem Header="Clientes" Click="MenuItem_Click">
            <MenuItem Header="Nuevo" HorizontalAlignment="Left" Width="140" Click="MenuItem_Click_3"/>
            <MenuItem Header="Listado" HorizontalAlignment="Left" Width="140" Click="MenuItem_Click_2"/>
        </MenuItem>
        <MenuItem Header="Presupuestos">
            <MenuItem Header="Nuevo" HorizontalAlignment="Left" Width="140"/>
            <MenuItem Header="Listado" HorizontalAlignment="Left" Width="140"/>
        </MenuItem>
    </Menu>
</Window>
