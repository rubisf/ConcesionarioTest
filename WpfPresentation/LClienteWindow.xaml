<Window x:Class="WpfPresentation.LClienteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPresentation"
        mc:Ignorable="d"
        Title="LClienteWindow" Height="300" Width="300">
    
    
    <Grid>
        <ListBox ItemsSource="{Binding clientes}" PreviewMouseDown="PlaceholdersListBox_OnPreviewMouseDown">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Nombre}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Window>
